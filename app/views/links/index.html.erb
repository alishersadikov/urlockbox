<% if current_user %>
  <h2>Logged in with <%= current_user.email %> </h2>

<h2>All URLs:</h2>
<% @links.each do |link| %>
  <table class="table">
    <tr>
      <th>Title</th>
      <th>URL</th>
        <th></th>
    </tr>
    <tr class='link' data-link-id="<%= link.id %>" data-link-title="<%= link.title %>" data-link-url="<%=link.url%>">
      <td><%=link.title%></td>
      <td><%=link.url%></td>
      <td> <button type="button" class="mark-as-read" >Mark As Read</button> </td>
    </tr>
  </table>

<% end %>

<h2>New URL:</h2>
<%= form_for @link do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.submit "Submit", method: "post", class:"btn btn-primary"%>
<% end %>

<% end %>
